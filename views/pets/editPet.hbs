<div class="edit-pet-info-container">
<h2>EDIT {{pet.name}}'S INFO</h2>

<form id="add-pet-form" method="POST" action="/pet/{{pet._id}}/edit" enctype="multipart/form-data"> 

    <div class="edit-pet-form">
        <label for="name">Name</label>
        <input type="text" name="name" value="{{pet.name}}" required>
    </div>

    <div class="edit-pet-form select">
        <label for="type">Type</label>
        <select name="type" required>
            {{#each type}}
            <option {{isSelected ../pet.type this}} value="{{this}}">{{this}}</option>
            {{/each}}
        </select>
    </div>

    <div class="edit-pet-form">
        <label for="breed">Provide further details on your pet</label>
        <input type="text" name="breed" placeholder="breed, race, scientific name" value="{{pet.breed}}">
    </div>

    <div class="edit-pet-form select">
        <label for="gender">Gender</label>
        <select name="gender">
            {{#each gender}}
            <option {{isSelected ../pet.gender this}} value="{{this}}">{{this}}</option>
            {{/each}}
        </select>
    </div>

    <div class="edit-pet-form date">
        <label for="dateOfBirth">Date of Birth</label>
        <input type="date" name="dateOfBirth" class="edit-pet-form" value="{{pet.dateOfBirth}}">
    </div>

    <div class="edit-pet-form select">
        <label for="size">Size</label>
        <select name="size">
            <option>Select</option>
            {{#each size}}
            <option {{isSelected ../pet.size this}} value="{{this}}">{{this}}</option>
            {{/each}}
        </select>
    </div>

    <div class="edit-pet-form textarea">
        <label for="size">Physical Condition</label>
        <textarea name="physicalCondition" class="edit-pet-form" placeholder="You may provide any details on your pet's physical condition that might be relevant on playdates.
Example : gets easily tired, cannot run fast, deaf, etc...">{{pet.physicalCondition}}</textarea>
    </div>

    <div class="edit-pet-form checkbox">
        <legend>Preferred location(s) to play</legend>
        {{#each environment}}
            <div class="select-option">
            <input type="checkbox" id="{{this}}" name="preferredEnvironment" value="{{this}}" {{isChecked ../pet.preferredEnvironment this}}>
            <label for="{{this}}">{{this}}</label>
            </div>
        {{/each}}
    </div>

    <div class="edit-pet-form checkbox">
        <legend>Preferred time(s) to play</legend>
        {{#each time}}
            <div class="select-option">
            <input type="checkbox" id="{{this}}" name="time" value="{{this}}" {{isChecked ../pet.time this}}>
            <label for="{{this}}">{{this}}</label>
            </div>
        {{/each}}
    </div>

    <div class="edit-pet-form textarea">
        <label for="size">Information</label>
        <textarea name="description" placeholder="Please provide a short introduction of the pet, or a description of the playdates you would like to find."
        >{{pet.description}}</textarea>
    </div>

    <div class="edit-pet-form">
        <label for="size">Upload a picture</label>
        <input name="picture" type="file">
    </div>

    <button type='submit' class="form-pet-btn"><a href="/{{pet._id}}">Edit my pet's info</a></button>
</form>

</div>
