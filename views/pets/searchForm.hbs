<section class="search-section">

<h1>Find a playmate</h1>

<p>I want to find a playmate according to ...</p>
    
<div>
    <form id="search-filter-form" method="GET" action="/search/filter">

        <div class="search-form-option">
            <h3>TYPE</h3>
            <p>Select the type of pet</p>
            <ul class="dropdown-content">
                {{#each type}}
                <li>
                <input {{isChecked }}type="checkbox" name="type" value="{{this}}">
                <label>{{this}}</label>
                </li>
                {{/each}}
            </ul>
            <input type='hidden'>
        </div>

        <div class="search-form-option">
            <h3>SIZE</h3>
            <p>Select the size of the pet</p>
            <ul>
                {{#each size}}
                <li>
                <input type="checkbox" name="time" value="{{this}}">
                <label>{{this}}</label>
                </li>
                {{/each}}
            </ul>
            <input type='hidden'>
        </div>

        <div class="search-form-option">
            <h3>TIME AVAILABILITY</h3>
            <p>It's better if my playmate is available...</p>
            <ul>
                {{#each time}}
                <li>
                <input type="checkbox" name="time" value="{{this}}">
                <label>{{this}}</label>
                </li>
                {{/each}}
            </ul>
            <input type='hidden'>
        </div>

        <div>
        <button type="submit">SEARCH</button>
        </div>

    </form>

    <a href="{{currentPetId}}/search-playmate">RESET FILTERS</a>
</div>

</section>



<div class="pet-search-container">
{{#each pet}}
{{> petCard}}
{{/each}}
</div>





