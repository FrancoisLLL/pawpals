    <div>
        <label for="size">LOCATION</label>
        <input name="picture" type="text" name="location" placeholder="City, Country">
    </div>

    <div>
        <label for="size">ADD A PICTURE OF MY PET</label>
        <input name="picture" type="file">
    </div>

    <button type='submit'>ADD MY PET !</button>


</form>